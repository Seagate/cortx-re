pipeline {
    agent {
        node {
            label 'docker-image-centos-7.8.2003-node'
        }
    }
    
    options {
        timeout(time: 15, unit: 'MINUTES')
        timestamps() 
    }

    parameters {
				
         choice(
            name: 'OS_VERSION', 
            choices: ['centos-7.8.2003'],
            description: 'OS Version'
        )
	}	
	

    stages {

        stage('Checkout Script') {
            steps {             
                script {
                    checkout([$class: 'GitSCM', branches: [[name: 'main']], doGenerateSubmoduleConfigurations: false, extensions: [], submoduleCfg: [], userRemoteConfigs: [[credentialsId: 'cortx-admin-github', url: 'https://github.com/Seagate/cortx-re/']]])                
                }
            }
        }

        stage ('Build Docker image') {
			steps {
				script { build_stage = env.STAGE_NAME }
				sh label: 'Build Docker image', script: '''
                echo 'y' | docker image prune
                docker-compose -f docker/internal-ci/docker-compose.yml build --compress cortx-build-cp-$OS_VERSION 
                docker-compose -f docker/internal-ci/docker-compose.yml build --compress cortx-build-io-$OS_VERSION
                echo 'y' | docker image prune
                '''
			}
		}

    }
}